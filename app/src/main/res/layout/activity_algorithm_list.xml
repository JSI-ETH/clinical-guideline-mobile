<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="item"
            type="com.moh.clinicalguideline.views.algorithm.AlgorithmCardViewModel" />
        <import type="android.text.Html"/>

        <import type="android.view.View" />
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/averageMargin"
        card_view:cardBackgroundColor="#E6E6E6"
        card_view:cardCornerRadius="@dimen/corner_radius_10"
        card_view:cardElevation="@dimen/card_elevation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{item.hasContent? View.VISIBLE:View.GONE }">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/urgent_title"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@{item.Urgent? @color/red:@color/primaryColor}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="30sp"/>


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/averageMargin"
                android:layout_marginRight="@dimen/averageMargin"
                android:layout_marginLeft="@dimen/averageMargin"
                android:layout_marginStart="@dimen/averageMargin"
                android:layout_marginTop="58dp"
                app:layout_constraintTop_toBottomOf="@+id/urgent_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@{item.title}" />


            <TextView
                android:id="@+id/tvContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/averageMargin"
                android:layout_marginStart="@dimen/averageMargin"
                android:layout_marginTop="@dimen/averageMargin"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:maxLines="5"
                android:visibility="@{item.hasDescription? View.VISIBLE:View.GONE }"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                tools:text="@{Html.fromHtml(item.description)}" />

            <Button
                android:id="@+id/btnNext"
                android:background="@{item.Urgent? @drawable/curved_button_urgent:@drawable/curved_button_normal}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/averageMargin"
                android:text="@string/bt_view"
                android:textColor="@color/white"
                android:visibility="@{item.hasConditional? View.GONE:View.VISIBLE }"
                app:layout_constraintBottom_toTopOf="@+id/yes_no_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvContent"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/yes_no_layout"
                android:gravity="center_horizontal"
                android:visibility="@{item.hasConditional? View.VISIBLE:View.GONE }"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnNext"
                android:layout_marginTop="10dp"
                android:padding="@dimen/averageMargin"
                >

                <Button
                    android:id="@+id/btnYes"
                    android:background="@{item.Urgent? @drawable/curved_button_urgent:@drawable/curved_button_normal}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/btn_yes"
                    android:textColor="@color/white"
                    />

                <Button
                    android:id="@+id/btnNo"
                    android:background="@{item.Urgent? @drawable/empty_curved_button_urgent:@drawable/empty_curved_button_normal}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/btn_no"
                    android:textColor="@{item.Urgent? @color/red:@color/primaryColor}"
                    />

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>