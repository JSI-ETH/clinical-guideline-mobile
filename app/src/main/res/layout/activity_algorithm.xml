<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="menu"
            type="com.moh.clinicalguideline.views.algorithm.AlgorithmViewModel" />
        <variable
            name="itemAnimator"
            type="android.support.v7.widget.RecyclerView.ItemAnimator" />

        <variable
            name="itemDecorator"
            type="com.moh.clinicalguideline.helper.SimpleDividerItemDecoration" />
        <import type="android.view.View" />

        <import type="com.moh.clinicalguideline.helper.DataBindingAdapters" />
    </data>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
        android:background="@color/primaryLightColor">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@{menu.title}"
            android:textColor="@color/primaryTextColor"
            android:textSize="22sp"
            android:textStyle="bold" />
    </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".views.symptom.SymptomActivity">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/smallPadding"
                android:paddingLeft="@dimen/noPadding"
                android:paddingRight="@dimen/noPadding"
                android:paddingTop="@dimen/noPadding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:text="@{menu.description}" />

                <android.support.v7.widget.RecyclerView
                android:id="@+id/rvPostsLis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                app:itemAnimator="@{itemAnimator}"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:adapter="@{menu.adapter}"/>

        </android.support.design.widget.CoordinatorLayout>
        </android.support.v4.widget.NestedScrollView>



    </LinearLayout>
</layout>